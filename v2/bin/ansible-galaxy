if __name__ == '__main__':

    display = Display()

    try:
        cli = Cli(display=display)
        cli.set_action(sys.argv)
        (options, args) = cli.parse()
        sys.exit(cli.run(options, args))
    except AnsibleError as e:
        display.error(str(e))
        sys.exit(1)
    except KeyboardInterrupt:
        display.error("interrupted")
        sys.exit(1)
